import Layout from "../../layouts/Layout.astro";
import srcImage from "../../assets/best-bass-fishing-spots-portland-oregon.webp";
import { Image } from "astro:assets";
import MyH1 from "../../components/MyH1.astro";
---
<Layout 
title="Best bass fishing spots near Portland, Oregon"
description="Comprehensive guide to best largemouth and smallmouth bass fishing hotspots – with seasonal tips, gear suggestions, and local insights."
url="https://portland.oregonfishingforum.com/bass/best-spots/"
type="article"
site_name="Oregon Fishing Forum"
ogimage={srcImage.src}
>
    <center>
			<MyH1 text="Best bass fishing spots near Portland, Oregon" />
			<p class="mb-4">Comprehensive guide to best largemouth and smallmouth bass fishing hotspots – with seasonal tips, gear suggestions, and local insights.</p>

			<Image
				src={srcImage}
				alt="Best bass fishing spots near Portland, Oregon"
				loading={"eager"}
				fetchpriority={"high"}
				/>
				<br>
			</center>

<h2>
    Top Bass Fishing Spots Near Portland
</h2>
<ol>
    <li>
        <strong>Henry Hagg Lake</strong> (Scoggins Valley/Park)
        <ul>
            <li>
                Located ~25 miles west, this reservoir is a <strong>bass powerhouse</strong>, producing trophy largemouth and record smallmouth 
            </li>
            <li>
                Try the coves and creek arms for largemouth; smallmouth favor rocky points and the dam structure.
            </li>
        </ul>
    </li>
    <li>
        <strong>Columbia Slough &amp; Multnomah Channel</strong>
        <ul>
            <li>
                Access via Sauvie Island or Smith &amp; Bybee Lagoons. Offers both <strong>largemouth and smallmouth</strong> in calm, shallow channels 
            </li>
            <li>
                Ideal for kayaks or light boats around riprapped banks and backwaters.
            </li>
        </ul>
    </li>
    <li>
        <strong>Willamette River (Portland to Oregon City)</strong>
        <ul>
            <li>
                Excellent smallmouth fishing along rocky shorelines through downtown and near Clackamas River 
            </li>
            <li>
                Use jerkbaits, soft-craws, and spinner baits near riprap.
            </li>
        </ul>
    </li>
    <li>
        <strong>St. Louis Ponds</strong> (Gervais)
        <ul>
            <li>
                Seven small ponds stocked with bass, panfish, and trout
            </li>
            <li>
                Bank only; varied habitats with docks, trees, vegetation—great variety.
            </li>
        </ul>
    </li>
    <li>
        <strong>Vernonia Lake</strong>
        <ul>
            <li>
                Quiet coastal foothills pond rich with largemouth, bluegill, and stocked trout .
            </li>
            <li>
                Less crowded, peaceful forest environment.
            </li>
        </ul>
    </li>
    <li>
        <strong>Hartman Pond (Benson State Park)</strong>
        <ul>
            <li>
                Small largemouth hotspot in the Gorge; structured shoreline with docks, wood 
            </li>
            <li>
                Great intro pond near St. Johns and boardwalks.
            </li>
        </ul>
    </li>
    <li>
        <strong>Estacada Lake</strong> (Clackamas)
        <ul>
            <li>
                Reservoir near Clackamas River with bass, trout, and occasional steelhead access
            </li>
            <li>
                Best from kayak or canoe on calm coves.
            </li>
        </ul>
    </li>
    <li>
        <strong>Smallmouth on Sauvie / Gilbert River</strong>
        <ul>
            <li>
                Known for channel catfish and smallmouth—use kayak to reach deeper pools&nbsp;
            </li>
        </ul>
    </li>
</ol>
